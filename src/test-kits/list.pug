extends ../layout/base.pug
block content
    - var activePage = 'test-kits'
    include ../layout/_sidebar.pug  
    include ../layout/_header.pug
    //modal qr code
    #modal-qr-code.modal.modal-blur.fade(tabindex='-1' role='dialog' aria-hidden='true')
      .modal-dialog.modal-sm.modal-dialog-centered(role='document')
        .modal-content
          .modal-body
            .modal-title TK1001
            .d-flex.justify-content-center
              img(src='./images/qr-code.png' alt='TK1001')
          .modal-footer
            button.btn.btn-link(type='button' data-bs-dismiss='modal') Close

    .page-wrapper
      .page-header.d-print-none
        .container-xl
          .row.g-2.align-items-center
            .col
              h2.page-title Test Kits
            .col.text-end
              a.btn.btn-outline-primary.me-2(href='#') Filters
              a.btn.btn-primary(href='/orders/form.html') Test Kits
              
      .page-body
        .container-xl
          .col-12
            .card 
              .table-responsive
                table.table.table-vcenter.card-table.table-striped
                  thead
                    tr
                      th TestKit ID
                      th QR Code
                      th Customer
                      th Orders
                      th Product
                      th Appointment
                      th Status
                  tbody
                    tr
                      td 
                        a(href="./form.html")
                          | TK1001
                      td
                        a(href="#" data-bs-toggle="modal" data-bs-target="#modal-qr-code")
                          i.ti.ti-18px.ti-qrcode
                      td John Doe
                      td 2
                      td Energy Boost Supplement
                      td 2024-01-12
                      td Used/Activated
                    tr
                      td 
                        a(href="./form.html")
                          | TK1002
                      td
                        a(href="#")
                          i.ti.ti-18px.ti-qrcode
                      td Jane Smith
                      td 4
                      td COVID-19 Test Kit
                      td 2024-01-13
                      td Unused
                    tr
                      td 
                        a(href="./form.html")
                          | TK1003
                      td
                        a(href="#")
                          i.ti.ti-18px.ti-qrcode
                      td Mike Brown
                      td 5
                      td COVID-19 Test Kit
                      td 2024-01-14
                      td Delivered/Unused